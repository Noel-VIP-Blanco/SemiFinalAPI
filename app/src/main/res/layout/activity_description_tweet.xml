<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context=".DescriptionTweetActivity">

    <TextView
        android:id="@+id/tweetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tweetDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/tweetName"
        android:layout_marginTop="8dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/delete_the_tweet_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/delete_button"
            android:layout_alignParentStart="true"/>

        <Button
            android:id="@+id/update_the_tweet_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/update_tweet"
            android:layout_toEndOf="@id/delete_the_tweet_button"
            android:layout_marginStart="16dp"/>

    </RelativeLayout>
</RelativeLayout>
